<Window x:Class="AmpShell.Views.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmpShell.Views"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
	    Title="Add a category..." ResizeMode="NoResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <Label Name="NameLabel" Content="Please enter a name :" />
            <TextBox Name="NameTextBox" TextWrapping="Wrap" MinWidth="300" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="5">Cancel</Button>
            <Button Name="OK" IsDefault="True" HorizontalAlignment="Right" Margin="5">OK</Button>
        </StackPanel>
    </DockPanel>
</Window>
